<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>">
    <%= message %>
  </div>
<% end %>
<%# end of reference %>

<div class="container bg-white py-5 px-3 mb-3 border border-1">
  <div class="jumbotron">
    <h1 class="display-4">
      <%= @section.year %> <%= @section.semester %>
    </h1>
    <hr class="my-3">
    <p class="lead">
      Course: 
      <%= @section.course ? @section.course.name : "NONE" %>
    </p>
  </div>
</div>

<%= link_to 'Edit', edit_section_path(@section), class:"btn btn-secondary" %>
<%= link_to 'Back', sections_path, class:"btn btn-secondary" %>

