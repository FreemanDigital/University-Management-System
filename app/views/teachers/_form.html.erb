<%= form_with(model: teacher) do |form| %>
  <% if teacher.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(teacher.errors.count, "error") %> prohibited this teacher from being saved:</h2>

      <ul>
        <% teacher.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: "form-control w-50" %>
  </div>

  <div class="form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: "form-control w-50" %>
  </div>

  <div class="form-group">
    <%= form.label :nine_hundred %>
    <%= form.text_field :nine_hundred, class: "form-control w-50" %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control w-50" %>
  </div>

  <div class="form-group my-1">
    <%= form.label :office_id %>
    <br />
    <%= form.collection_select :office_id, Office.where.missing(:teacher), :id, (:name), {:include_blank => 'NO OFFICE'}, { class: "form-control w-50" } %>
  </div>

  <div class="actions mb-1 mt-3">
    <%= form.submit class: "btn btn-secondary" %>
  </div>
<% end %>
