<%# stackoverflow.com/questions/45065065/rails-5-redirect-notice-style %>
<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>">
    <%= message %>
  </div>
<% end %>
<%# end of reference %>

<div class="container bg-white py-5 px-3 mb-3 border border-1">
  <div class="jumbotron">
    <h1 class="display-4">
      <%= @course.prefix %><%= @course.number %>
    </h1>
    <hr class="my-3">
    <p class="lead">
      Description:
      <br />
      <span class="px-3"><%= @course.description %></span>
    </p>
    <p class="lead">
      Sections:<br />
      <ul class="list-unstyled px-3">
      <% if @course.sections.all.size > 0 %>
        <% @course.sections.each do |section| %>
          <li><%= section.name %></li>
        <% end %>
      <% else %>
        <%= "NONE" %>
      <% end %>
      </ul>
    </p>
  </div>
</div>

<%= link_to 'Edit', edit_course_path(@course), class:"btn btn-secondary" %>
<%= link_to 'Back', courses_path, class:"btn btn-secondary" %>
